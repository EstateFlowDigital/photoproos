# =============================================================================
# PhotoProOS Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# Database (Railway PostgreSQL)
# -----------------------------------------------------------------------------
DATABASE_URL="postgresql://postgres:password@localhost:5432/photoproos?schema=public"

# -----------------------------------------------------------------------------
# Clerk Authentication
# https://dashboard.clerk.com
# -----------------------------------------------------------------------------
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...
CLERK_WEBHOOK_SECRET=whsec_...

# Clerk URLs (optional, defaults work for most cases)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
# Note: afterSignInUrl and afterSignUpUrl are deprecated in Clerk v6+
# Use fallbackRedirectUrl prop directly in SignIn/SignUp components instead
# NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/dashboard
# NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/onboarding

# -----------------------------------------------------------------------------
# Stripe Payments
# https://dashboard.stripe.com
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# -----------------------------------------------------------------------------
# Cloudflare R2 Storage
# https://dash.cloudflare.com
# -----------------------------------------------------------------------------
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=photoproos
R2_PUBLIC_URL=https://your-bucket.r2.dev

# -----------------------------------------------------------------------------
# Resend Email
# https://resend.com
# -----------------------------------------------------------------------------
RESEND_API_KEY=re_...
RESEND_FROM_EMAIL=noreply@photoproos.com

# -----------------------------------------------------------------------------
# Upstash Rate Limiting (Optional but Recommended)
# https://console.upstash.com
# Used for rate limiting public API endpoints
# -----------------------------------------------------------------------------
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# -----------------------------------------------------------------------------
# Trigger.dev Background Jobs (Optional)
# https://trigger.dev
# -----------------------------------------------------------------------------
TRIGGER_API_KEY=
TRIGGER_API_URL=https://api.trigger.dev

# -----------------------------------------------------------------------------
# Sentry Error Tracking (Optional)
# https://sentry.io
# -----------------------------------------------------------------------------
SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# -----------------------------------------------------------------------------
# PostHog Analytics (Optional)
# https://posthog.com
# -----------------------------------------------------------------------------
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# -----------------------------------------------------------------------------
# Google Maps Platform
# https://console.cloud.google.com/google/maps-apis
# Required: Places API, Geocoding API, Distance Matrix API, Maps JavaScript API
# -----------------------------------------------------------------------------
GOOGLE_MAPS_API_KEY=
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# -----------------------------------------------------------------------------
# OpenWeather API
# https://openweathermap.org/api
# Used for weather forecasts and sunrise/sunset times
# -----------------------------------------------------------------------------
OPENWEATHER_API_KEY=

# -----------------------------------------------------------------------------
# OpenAI API (Optional)
# https://platform.openai.com/api-keys
# Used for AI-powered caption generation in Marketing Studio
# If not configured, falls back to template-based captions
# -----------------------------------------------------------------------------
OPENAI_API_KEY=

# -----------------------------------------------------------------------------
# Property Data API (Optional)
# ATTOM Data: https://api.attomdata.com
# Used for auto-fetching property details for real estate shoots
# -----------------------------------------------------------------------------
ATTOM_API_KEY=

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
