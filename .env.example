# =============================================================================
# PhotoProOS Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# Database (Railway PostgreSQL)
# -----------------------------------------------------------------------------
DATABASE_URL="postgresql://postgres:password@localhost:5432/photoproos?schema=public"

# -----------------------------------------------------------------------------
# Clerk Authentication
# https://dashboard.clerk.com
# -----------------------------------------------------------------------------
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...
CLERK_WEBHOOK_SECRET=whsec_...

# Clerk URLs (optional, defaults work for most cases)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/onboarding

# -----------------------------------------------------------------------------
# Stripe Payments
# https://dashboard.stripe.com
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# -----------------------------------------------------------------------------
# Cloudflare R2 Storage
# https://dash.cloudflare.com
# -----------------------------------------------------------------------------
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=photoproos
R2_PUBLIC_URL=https://your-bucket.r2.dev

# -----------------------------------------------------------------------------
# Resend Email
# https://resend.com
# -----------------------------------------------------------------------------
RESEND_API_KEY=re_...
RESEND_FROM_EMAIL=noreply@photoproos.com

# -----------------------------------------------------------------------------
# Trigger.dev Background Jobs (Optional)
# https://trigger.dev
# -----------------------------------------------------------------------------
TRIGGER_API_KEY=
TRIGGER_API_URL=https://api.trigger.dev

# -----------------------------------------------------------------------------
# Sentry Error Tracking (Optional)
# https://sentry.io
# -----------------------------------------------------------------------------
SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# -----------------------------------------------------------------------------
# PostHog Analytics (Optional)
# https://posthog.com
# -----------------------------------------------------------------------------
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
